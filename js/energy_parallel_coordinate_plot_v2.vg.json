{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "title": "Electricity Generation and CO2 Emissions (2012-2021)",
    "params": [
        {
            "name": "selected_jurisdiction",
            "value": null,
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "NSW",
                    "VIC",
                    "QLD",
                    "WA",
                    "SA",
                    "TAS",
                    "NT"
                ],
                "labels": [
                    "All",
                    "New South Wales",
                    "Victoria",
                    "Queensland",
                    "Western Australia",
                    "South Australia",
                    "Tasmania",
                    "Northern Territory"
                ],
                "name": "Select State: "
            }
        }
    ],
    "data": {
        "url": "../data/merged_electricity_emissions_data.csv",
        "format": {
            "type": "csv",
            "parse": {
                "Black coal": "number",
                "Brown coal": "number",
                "Natural gas": "number",
                "Oil products": "number",
                "CO2 Emissions": "number"
            }
        }
    },
    "width": 600,
    "height": 300,
    "transform": [
        {
            "filter": "datum.Year >= 2012"
        },
        {
            "window": [
                {
                    "op": "count",
                    "as": "index"
                }
            ]
        },
        {
            "fold": [
                "Oil products",
                "Natural gas",
                "Brown coal",
                "Black coal",
                "CO2 Emissions"
            ],
            "as": [
                "key",
                "value"
            ]
        },
        {
            "calculate": "indexof(['Oil products','Natural gas','Brown coal','Black coal','CO2 Emissions'], datum.key)",
            "as": "keyOrder"
        },
        {
            "joinaggregate": [
                {
                    "op": "min",
                    "field": "value",
                    "as": "min"
                },
                {
                    "op": "max",
                    "field": "value",
                    "as": "max"
                }
            ],
            "groupby": [
                "key"
            ]
        },
        {
            "calculate": "(datum.value - datum.min) / (datum.max-datum.min)",
            "as": "norm_val"
        },
        {
            "calculate": "(datum.min + datum.max) / 2",
            "as": "mid"
        },
        {
            "filter": "!selected_jurisdiction || selected_jurisdiction === datum.Jurisdiction"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "rule",
                "color": "#ccc"
            },
            "encoding": {
                "detail": {
                    "aggregate": "count"
                },
                "x": {
                    "field": "key",
                    "type": "nominal",
                    "sort": {
                        "field": "keyOrder",
                        "order": "ascending"
                    }
                }
            }
        },
        {
            "mark": "line",
            "encoding": {
                "color": {
                    "type": "nominal",
                    "field": "Jurisdiction"
                },
                "detail": {
                    "type": "nominal",
                    "field": "index"
                },
                "opacity": {
                    "value": 0.3
                },
                "x": {
                    "type": "nominal",
                    "field": "key",
                    "sort": {
                        "field": "keyOrder",
                        "order": "ascending"
                    }
                },
                "y": {
                    "type": "quantitative",
                    "field": "norm_val",
                    "axis": null
                },
                "tooltip": [
                    {
                        "field": "Jurisdiction",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "Year",
                        "type": "quantitative",
                        "title": "Year"
                    },
                    {
                        "field": "Black coal",
                        "type": "quantitative",
                        "title": "Black coal (GWh)"
                    },
                    {
                        "field": "Brown coal",
                        "type": "quantitative",
                        "title": "Brown coal (GWh)"
                    },
                    {
                        "field": "Natural gas",
                        "type": "quantitative",
                        "title": "Natural gas (GWh)"
                    },
                    {
                        "field": "Oil products",
                        "type": "quantitative",
                        "title": "Oil products (GWh)"
                    },
                    {
                        "field": "CO2_Emissions",
                        "type": "quantitative",
                        "title": "CO2 Emissions (Mt)"
                    }
                ]
            }
        },
        {
            "encoding": {
                "x": {
                    "type": "nominal",
                    "field": "key",
                    "sort": {
                        "field": "keyOrder",
                        "order": "ascending"
                    }
                },
                "y": {
                    "value": 0
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "text",
                        "style": "label"
                    },
                    "encoding": {
                        "text": {
                            "aggregate": "max",
                            "field": "max"
                        }
                    }
                },
                {
                    "mark": {
                        "type": "tick",
                        "style": "tick",
                        "size": 8,
                        "color": "#ccc"
                    }
                }
            ]
        },
        {
            "encoding": {
                "x": {
                    "type": "nominal",
                    "field": "key",
                    "sort": {
                        "field": "keyOrder",
                        "order": "ascending"
                    }
                },
                "y": {
                    "value": 150
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "text",
                        "style": "label"
                    },
                    "encoding": {
                        "text": {
                            "aggregate": "min",
                            "field": "mid"
                        }
                    }
                },
                {
                    "mark": {
                        "type": "tick",
                        "style": "tick",
                        "size": 8,
                        "color": "#ccc"
                    }
                }
            ]
        },
        {
            "encoding": {
                "x": {
                    "type": "nominal",
                    "field": "key",
                    "sort": {
                        "field": "keyOrder",
                        "order": "ascending"
                    }
                },
                "y": {
                    "value": 300
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "text",
                        "style": "label"
                    },
                    "encoding": {
                        "text": {
                            "aggregate": "min",
                            "field": "min"
                        }
                    }
                },
                {
                    "mark": {
                        "type": "tick",
                        "style": "tick",
                        "size": 8,
                        "color": "#ccc"
                    }
                }
            ]
        }
    ],
    "config": {
        "axisX": {
            "domain": false,
            "labelAngle": 0,
            "tickColor": "#ccc",
            "title": null
        },
        "view": {
            "stroke": null
        },
        "style": {
            "label": {
                "baseline": "middle",
                "align": "right",
                "dx": -5
            },
            "tick": {
                "orient": "horizontal"
            }
        }
    }
}