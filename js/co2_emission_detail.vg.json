{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "title": "Aus CO₂ Emission Detail (1990-2023)",
    "width": "container",
    "height": 430,
    "data": {
        "url": "https://raw.githubusercontent.com/monash-yluo/3179-a2-australia-green-energy/refs/heads/main/data/UNFCCC_Paris%C2%A0Agreement%20inventory_30-09-2025_14-34-38.csv",
        "format": {
            "type": "csv",
            "parse": {
                "Financial Year": "date:%Y",
                "Energy (Mt)": "number",
                "Industrial Processes (Mt)": "number",
                "Agriculture (Mt)": "number",
                "Land Use, Land-Use Change and Forestry UNFCCC (Mt)": "number",
                "Waste (Mt)": "number"
            }
        }
    },
    "config": {
        "background": "transparent",
        "view": {
            "stroke": null
        },
        "axis": {
            "grid": false
        }
    },
    "transform": [
        {
            "fold": [
                "Industrial Processes",
                "Waste",
                "Agriculture",
                "Energy",
                "Land Use, Land-Use Change and Forestry UNFCCC"
            ],
            "as": [
                "Sector",
                "value"
            ]
        },
        {
            "calculate": "if(datum.Sector === 'Industrial Processes', 0, if(datum.Sector === 'Waste', 1, if(datum.Sector === 'Agriculture', 2, if(datum.Sector === 'Energy', 3, 4))))",
            "as": "categoryOrder"
        }
    ],
    "params": [
        {
            "name": "selectSector",
            "select": {
                "type": "point",
                "fields": [
                    "Sector"
                ]
            },
            "bind": "legend"
        }
    ],
    "mark": "area",
    
    "encoding": {
        "x": {
            "field": "Financial Year",
            "type": "temporal",
            "title": "Year",
            "timeUnit": "year"
        },
        "y": {
            "field": "value",
            "type": "quantitative"
        },
        "opacity": {
            "condition": {
                "param": "selectSector",
                "value": 1
            },
            "value": 0.2
        },
        "color": {
            "field": "Sector",
            "type": "nominal",
            "sort": [
                "Industrial Processes",
                "Waste",
                "Agriculture",
                "Energy",
                "Land Use, Land-Use Change and Forestry UNFCCC"
            ],
            "scale": {
                "domain": [
                    "Industrial Processes",
                    "Waste",
                    "Agriculture",
                    "Energy",
                    "Land Use, Land-Use Change and Forestry UNFCCC"
                ],
                "range": [
                    "#FFB74D",
                    "#FF9800",
                    "#F57C00",
                    "#E65100",
                    "#66BB6A"
                ]
            }
        },
        "order":{
            "field": "categoryOrder",
            "type": "quantitative",
            "sort": "descending"
        },
        "tooltip": [
            {
                "field": "Financial Year",
                "type": "temporal",
                "title": "Year",
                "timeUnit": "year"
            },
            {
                "field": "Sector",
                "type": "nominal",
                "title": "Sector"
            },
            {
                "field": "value",
                "type": "quantitative",
                "title": "CO₂ Emission (Mt)"
            }
        ]
    }
}